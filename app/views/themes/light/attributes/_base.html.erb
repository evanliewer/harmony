<% # Ejected from `bullet_train-themes-light-1.7.22/app/views/themes/light/attributes/_base.html.erb`. %>

<% url ||= nil %>
<% strategy ||= current_attributes_strategy || :none %>

<% body = link_to_if url.present?, partial.body, url %>

<% object ||= current_attributes_object %>
<% editing = ActiveModel::Type::Boolean.new.cast(cookies["editing_#{object.to_gid_param}_#{attribute}"]) %>

<% case strategy %>
<% when :label %>
  <div>
    <label class="block text-2xs uppercase font-semibold py-2 dark:text-white">
      <%= partial.heading %>
    </label>
    <div class="dark:text-slate-400">
      <%= body %>
    </div>
  </div>
<% when :inline_edit %>
  <% inline_edit_path = edit_account_inline_edit_path(object, params: {record: object.to_sgid_param, attribute: attribute, label: true})  %>
  <% restore_edit_path = edit_account_inline_edit_path(object, params: {record: object.to_sgid_param, attribute: attribute, restore: true, label: true})  %>
  <%= turbo_frame_tag [dom_id(object), attribute], src: (restore_edit_path if editing), class: "inline-edit-wrapper", refresh: "morph" do %>
    <% unless editing %>
      <div class="mb-2">
        <label class="block text-2xs font-semibold py-2 dark:text-white">
          <%= partial.heading %>
        </label>
        <div class="dark:text-slate-400">
          <%= body %>
          <%= link_to inline_edit_path, data: {turbo_prefetch: false} do %>
            <i class="ml-2 ti ti-pencil-alt fal fa-pen-to-square"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <%= body %>
<% end %>

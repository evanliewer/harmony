<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :diets %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: diet do %>
  <tr data-id="<%= diet.id %>">
    <%= render "shared/tables/checkbox", object: diet %>
    <td><%= render 'shared/attributes/text', attribute: :name, url: [:account, diet] %></td>
    <td><%= render 'shared/attributes/text', attribute: :abbreviation %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, diet %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, diet], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, diet %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, diet], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(diet)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>

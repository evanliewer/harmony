<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :reservations %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: reservation do %>
  <tr data-id="<%= reservation.id %>">
    <%= render "shared/tables/checkbox", object: reservation %>
    <td><%= render 'shared/attributes/text', attribute: :name, url: [:account, reservation] %></td>
    <td><%= render 'shared/attributes/belongs_to', attribute: :retreat %></td>
    <td><%= render 'shared/attributes/belongs_to', attribute: :item %></td>
    <td><%= render 'shared/attributes/belongs_to', attribute: :user %></td>
    <td><%= render 'shared/attributes/date_and_time', attribute: :start_time %></td>
    <td><%= render 'shared/attributes/date_and_time', attribute: :end_time %></td>
    <td><%= render 'shared/attributes/number', attribute: :quantity %></td>
    <td><%= render 'shared/attributes/text', attribute: :notes %></td>
    <td class="text-center"><%= render 'shared/attributes/option', attribute: :seasonal_default %></td>
    <td class="text-center"><%= render 'shared/attributes/option', attribute: :exclusive %></td>
    <td class="text-center"><%= render 'shared/attributes/option', attribute: :active %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, reservation %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, reservation], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, reservation %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, reservation], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(reservation)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>

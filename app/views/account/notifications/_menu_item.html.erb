<% if can? :read, Notification.new(team: current_team) %>
  <%= render 'account/shared/menu/item', {
    url: main_app.polymorphic_path([:account, current_team, :notifications]),
    label: pluralize(current_user.notifications.where(read_at: nil).count.to_s, "Notification"),
  } do |p| %>
    <% p.icon do %>
      <i class="<%= t('notifications.navigation.icon') %>"></i>
    <% end %>
  <% end %>
<% end %>




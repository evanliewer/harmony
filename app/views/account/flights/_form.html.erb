<% cancel_path ||= flight.persisted? ? [:account, flight] : [:account, @team, :flights] %>

<%= form_with model: flight, url: (flight.persisted? ? [:account, flight] : [:account, @team, :flights]), local: true, class: 'form' do |form| %>
  <%= render "shared/limits/form", form: form, cancel_path: cancel_path do %>
    <%= render 'account/shared/forms/errors', form: form %>

    <% with_field_settings form: form do %>
      <%= render 'shared/fields/text_field', method: :name, options: {autofocus: true} %>
      <%= render 'shared/fields/text_field', method: :description %>
      <%= render 'shared/fields/options', method: :external %>
      <%= render 'shared/fields/options', method: :preflight %>
      <%= render 'shared/fields/number_field', method: :warning %>
      <%= render 'shared/fields/super_select', method: :flights_timeframe_id, options: {}, html_options: {},
        choices: @flight.valid_flights_timeframes.map { |timeframe| [timeframe.label_string, timeframe.id] } %>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <% end %>

    <div class="buttons">
      <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
      <%= link_to t('global.buttons.cancel'), cancel_path, class: "button-secondary" %>
    </div>
  <% end %>
<% end %>

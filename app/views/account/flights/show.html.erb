<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @flight do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @flight %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @flight, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :name %>
            <%= render 'shared/attributes/text', attribute: :description %>
            <%= render 'shared/attributes/option', attribute: :external %>
            <%= render 'shared/attributes/option', attribute: :preflight %>
            <%= render 'shared/attributes/number', attribute: :warning %>
            <%= render 'shared/attributes/belongs_to', attribute: :flights_timeframe %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @flight], class: first_button_primary if can? :edit, @flight %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @flight], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@flight)) } if can? :destroy, @flight %>
          <%= link_to t('global.buttons.back'), [:account, @team, :flights], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>

  <style>
    /* Ensure page size is 8.5 x 11 inches */
    @page {
      size: 8.5in 11in;
      margin: 0.5in;
    }

    /* General body styling */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      width: 8.5in;
      height: 11in;
      color: #333;
    }

    /* Common container for print sections */
    .print-area {
      width: 100%;
      margin: 0.5in;
    }

    /* Title section */
    .title-section {
      text-align: center;
      padding-bottom: 0.1in;
    }

    .title-section h1 {
      font-size: 24pt;
      margin-bottom: 0.1in;
    }

    .title-section h2 {
      font-size: 18pt;
      color: #666;
      margin-bottom: 0.1in;
    }

    /* Header table (client details, date, etc.) */
    .header-table {
      width: 100%;
      margin-bottom: 0.1in;
    }

    .header-table td {
      padding: 0.0in;
      vertical-align: top;
    }

    /* Multiple tables for content */
    .data-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 0.1in;
    }

    .data-table th, .data-table td {
      border: 1px solid #000;
      padding: 0.03in;
      text-align: left;
    }

    .data-table th {
      background-color: #f0f0f0;
    }

    /* Two-column layout */
    .two-column {
      display: flex;
      justify-content: space-between;
    }

    .column {
      width: 48%;
    }

    /* Footer section */
    .footer {
      position: fixed;
      bottom: 0.5in;
      left: 0.5in;
      right: 0.5in;
      text-align: center;
      font-size: 10pt;
      color: #666;
    }

    /* Print styling */
    @media print {
      .no-print {
        display: none;
      }

      /* Ensure fixed elements stay in place */
      .footer {
        position: fixed;
        bottom: 0.5in;
      }
    }

    /* Section breaks */
    .section-title {
      font-size: 14pt;
      font-weight: bold;
      margin: 0.2in 0;
    }

    .highlight {
      background-color: #f5f5f5;
      padding: 0.2in;
      border-radius: 4px;
    }

    /* Page break after complex sections */
    .page-break {
      page-break-before: always;
    }
  </style>
</head>


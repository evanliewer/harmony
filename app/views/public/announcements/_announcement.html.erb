<article class="flex max-w-xl flex-col items-start justify-between mb-16">
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime="<%= announcement.published_at.to_date.to_fs(:db) %>" class="text-slate-500"><%= announcement.published_at.to_date.to_fs(:long) %></time>
    <div class="relative z-10 rounded-full bg-slate-50 px-3 py-1.5 font-medium text-slate-600 hover:bg-slate-100"><%= announcement.kind.capitalize %></div>
  </div>
  <div class="group relative">
    <h3 class="mt-3 text-lg font-semibold leading-6 text-slate-900 group-hover:text-slate-600">
      <%= link_to announcement_path(announcement) do %>
        <span class="absolute inset-0"></span>
        <%= announcement.title %>
      <% end %>
    </h3>
    <p class="mt-5 line-clamp-3 text-sm leading-6 text-slate-600"><%= announcement.body %></p>
  </div>
  </div>
</article>
